{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "g++ - 生成和调试活动文件",
            "type": "cppdbg",
            "request": "launch",
            "program": "/media/sanenchen/Codes/tmp/output",  // 你的可执行文件路径
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",  // 工作目录（源代码目录）
            "environment": [],
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "启用 gdb 整齐打印",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "C/C++: g++ 生成活动文件",  // 与 tasks.json 的 label 一致
            "miDebuggerPath": "/usr/bin/gdb",
            "logging": {
                "moduleLoad": false  // 关闭冗余的模块加载日志
            }
        }
    ]
}